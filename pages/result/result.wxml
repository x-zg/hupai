<view class="container">
  <text class="title">游戏结果</text>
  <view class="winner">
    <text>胜利者：{{winner}}</text>
  </view>
  <view class="score-list">
    <view class="score-item" wx:for="{{scores}}" wx:key="player">
      <text>{{item.player}}</text>
      <text>得分：{{item.score}}</text>
    </view>
  </view>
  <button bindtap="backToHome">返回首页</button>
</view>
