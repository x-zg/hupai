.container {
  padding: 20rpx;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 50rpx;
}
.player-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.player {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx;
  padding: 20rpx;
  border: 2rpx solid #cccccc;
  border-radius: 20rpx;
  width: 20rpx;
  height: 20rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 600rpx;
  margin-bottom: 20rpx;
}
.current {
  border-color: #1aad19;
  background-color: rgba(26, 187, 217, 0.1);
}
button {
  background-color: #1aad19;
  color: #ffffff;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  margin-top: 50rpx;
}
